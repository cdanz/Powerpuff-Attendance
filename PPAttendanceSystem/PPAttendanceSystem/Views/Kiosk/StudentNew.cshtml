@model _5051.Models.StudentModel

@{
    ViewBag.Title = "Create";
}



<div class="container">
    <div class="row">
        <h2>Create Student</h2>
        <br />
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
             <div class="row">
                 <div class="col-sm-3 text-right">
                     @Html.DisplayNameFor(m => m.Name)
                </div>
                <div class="col-sm-2">
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>     
            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.AvatarId)
                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.AvatarId, _5051.Backend.AvatarBackend.Instance.GetAvatarListItem(Model.AvatarId))
                    @Html.ValidationMessageFor(m => m.AvatarId)
                </div>
            </div>
            <br />
            <br />
            <div class="row">
                <div class="col-sm-3 text-right">
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                    <input type="submit" value="Create" class="btn btn-primary">
                </div>
            </div>
        }
    </div>
</div>

<!-- Footer bar-->
<section class="footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-8 col-lg-12">
                <div class="callout-text font-alt">
                    <p style="margin-bottom: 0px;" class="alignleft">2018 Team Powerpuff</p>
                    <p style="margin-bottom: 0px;" class="alignright">Middle College High School</p>
                </div>
            </div>
        </div>
    </div>
</section>