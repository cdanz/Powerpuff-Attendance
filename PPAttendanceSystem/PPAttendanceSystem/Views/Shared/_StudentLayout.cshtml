<!DOCTYPE html>
<html lang="en-US" dir="ltr">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--
	Document Title
	=============================================
	-->
	<link rel="shortcut icon" href="~/Content/Landing/wayfinder-icon.ico">
	<title>Wayfinder | @ViewBag.Title</title>

	<!--
	Stylesheets
	=============================================
	-->
	<link href="~/Content/Landing/css/style.css" rel="stylesheet">
	<link href="~/assets/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/Content/Site.css" rel="stylesheet">
	<link href="@Url.Content("~/Content/StudentDashBoard.css")" rel="stylesheet" type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
	<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>


	<!-- navbar links-->
	<div class="container-fluid shared-head">
		<div class="row">
			<div class="col-md-8">
				<img src="~/Content/Landing/logo.png">
			</div>
			<div class="col-md-4 menu">
				<div class="col-md-3"><a class="btn btn-link head-btn" href="@Url.Action("Home", "Landing")">Home</a></div>
				<div class="col-md-3"><a class="btn btn-link head-btn" href="@Url.Action("Home", "Landing")#kiosk">Kiosk</a></div>
				<div class="col-md-3"><a class="btn btn-link head-btn" href="@Url.Action("Home", "Landing")#admin">Admin</a></div>
				<div class="col-md-3"><a class="btn btn-link head-btn" href="@Url.Action("StudentHome", "Profile")">Student</a></div>
			</div>
		</div>
	</div>

	<!-- Donut chart-->
	<script type="text/javascript">
		google.charts.load("current", { packages: ["corechart"] });
		google.charts.setOnLoadCallback(drawChart);
		function drawChart() {
			var data1 = google.visualization.arrayToDataTable([
				['Attendance Type', 'Frequency %'],
				['Excused', 10],
				['Missed', 15],
				['Partial day', 40],
				['Full day', 35]
			]);

			var options1 = {
				width: 600,
				height: 340,
				pieHole: 0.4,
				backgroundColor: 'transparent',
				color: 'white',
				title: 'Annual Attendance'
			};

			var chart = new google.visualization.PieChart(document.getElementById('donutchart'));
			chart.draw(data1, options1);
		}
	</script>
	<!-- Bar chart-->
	<script type="text/javascript">
		google.charts.load("current", { packages: ["corechart"] });
		google.charts.setOnLoadCallback(drawChart);
		function drawChart() {
			var data2 = google.visualization.arrayToDataTable([
				['Mood', 'Frequency', { role: 'style' }],
				['Sadder', 29, '#FFEA53'],
				['Neutral', 46, '#5378FF'],
				['Happier', 25, '#9453FF'],
			]);

			var options2 = {
				title: "Mood Frequency (Annual)",
				backgroundColor: 'transparent',
				legend: { position: "none" },
				titleTextStyle:
					{
						color: 'Black'
					},
			};

			var chart = new google.visualization.BarChart(document.getElementById('barchart_values'));
			chart.draw(data2, options2);
		}
	</script>
</head>

<body>


    <!-- Don't delete this or else MVC gets very angry-->
    <div class="container">
        @RenderBody()
    </div>

    <!-- JQuery and JavaScript-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/studentDashboard")
</body>
</html>
