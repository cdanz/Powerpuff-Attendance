<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
	<style>
		/* Dropdown Button */
		.dropbtn {
			background-color: white;
			color: dimgray;
			padding: 16px;
			font-size: 16px;
			border: none;
		}

		.dropbtn a:hover {
			text-decoration: none;
		}

		/* The container <div> - needed to position the dropdown content */
		.dropdown {
			position: relative;
			display: inline-block;
		}

		/* Dropdown Content (Hidden by Default) */
		.dropdown-content {
			display: none;
			position: absolute;
			background-color: white;
			min-width: 160px;
			box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
			z-index: 1;
		}

			/* Links inside the dropdown */
			.dropdown-content a {
				color: black;
				padding: 12px 16px;
				text-decoration: none;
				display: block;
			}

				/* Change color of dropdown links on hover */
				.dropdown-content a:hover {
					background-color: lavenderblush
				}

		/* Show the dropdown menu on hover */
		.dropdown:hover .dropdown-content {
			display: block;
		}

		/* Change the background color of the dropdown button when the dropdown content is shown */
		.dropdown:hover .dropbtn {
			background-color: white;
		}
	</style>
</head>
<body>
    <div class="navbar navbar-light navbar-fixed-top" style="background-color: #ffffff">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Middle College HS", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="dropdown">
				<button class="dropbtn">@Html.ActionLink("Admin", "Admin_Login", "Home")</button>
					<div class="dropdown-content">
						@Html.ActionLink("Metrics", "Admin_Reports", "Home")
						@Html.ActionLink("Settings", "Admin_Edits", "Home")
					</div>
			</div>
			<div class="dropdown">
				<button class="dropbtn">@Html.ActionLink("Student", "Student_Dashboard", "Home")</button>
				<div class="dropdown-content">
					<a href="#">Add a student</a>
					<a href="#">Puzzle</a>
				</div>
			</div>
		</div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team Powerpuff Girls</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
