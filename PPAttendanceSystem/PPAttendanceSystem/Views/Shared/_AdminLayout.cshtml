                ['5/21-25', 8, 6, 8, 4, 8],
                ['5/28-6/1', 8, 5, 4, 8, 8]

            ]);

            var options = {
                title: 'Attendance Tracker',
                vAxis: { title: 'Hours' },
                hAxis: { title: 'Time' },
                seriesType: 'bars',
                backgroundColor: 'transparent',
                series: { 5: { type: 'line' } }
            };

            var chart = new google.visualization.ComboChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>

    <script type="text/javascript">
