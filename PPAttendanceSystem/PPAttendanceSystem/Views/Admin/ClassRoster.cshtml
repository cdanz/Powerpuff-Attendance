@{
	ViewBag.Title = "Class Roster";
}

<head>
    <link href="~/Content/harvey.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/backgroundcolor.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/tableContent.js"></script>


    <script>
        $(".js-example-tags").select2({
            tags: true
        });</script>

</head>

<section class="bg-dark-30 showcase-page-header module parallax-bg">
    <div class="titan-caption">
        <div class="caption-content">
            <div class="admin_container" style="float:right;">
                @Html.ActionLink("Settings", "ClassSettings", "Admin", null, new { @class = "btn btn-primary" })
            </div>
            <div class"row" style="width:100%;">
                <table style="width:100%;">
                    <tr style="width:100%;">
                        <td style="width:20%;"><h1>Manage Roster</h1></td>
                        <td style="width:80%;"></td>
                    </tr>
                </table>
            </div>

            <div id="wrapper">
                <table align='center' cellspacing=50 cellpadding=10 id="data_table" border=1 style="width:80%;">
                    
                    <tr style="font-weight:bold">
                        <td>Name</td>
                        <td>Country</td>
                        <td>id</td>
                    </tr>

                    <tr id="row1">
                        <td id="name_row1">Ankit</td>
                        <td id="country_row1">India</td>
                        <td id="age_row1">20</td>
                        <td>
                            <input type="button" id="edit_button1" value="Edit" class="edit" onclick="edit_row('1')">
                            <input type="button" id="save_button1" value="Save" class="save" onclick="save_row('1')">
                            <input type="button" value="Delete" class="delete" onclick="delete_row('1')">
                        </td>
                    </tr>

                    <tr id="row2">
                        <td id="name_row2">Shawn</td>
                        <td id="country_row2">Canada</td>
                        <td id="age_row2">26</td>
                        <td>
                            <input type="button" id="edit_button2" value="Edit" class="edit" onclick="edit_row('2')">
                            <input type="button" id="save_button2" value="Save" class="save" onclick="save_row('2')">
                            <input type="button" value="Delete" class="delete" onclick="delete_row('2')">
                        </td>
                    </tr>

                    <tr id="row3">
                        <td id="name_row3">Rahul</td>
                        <td id="country_row3">India</td>
                        <td id="age_row3">19</td>
                        <td>
                            <input type="button" id="edit_button3" value="Edit" class="edit" onclick="edit_row('3')">
                            <input type="button" id="save_button3" value="Save" class="save" onclick="save_row('3')">
                            <input type="button" value="Delete" class="delete" onclick="delete_row('3')">
                        </td>
                    </tr>

                    <tr id="row4">
                        <td id="name_row4">Rahul</td>
                        <td id="country_row4">India</td>
                        <td id="age_row4">19</td>
                        <td>
                            <input type="button" id="edit_button4" value="Edit" class="edit" onclick="edit_row('4')">
                            <input type="button" id="save_button4" value="Save" class="save" onclick="save_row('4')">
                            <input type="button" value="Delete" class="delete" onclick="delete_row('4')">
                        </td>
                    </tr>

                    <tr>
                        <td><input type="text" id="new_name"></td>
                        <td><input type="text" id="new_country"></td>
                        <td><input type="text" id="new_age"></td>
                        <td><input type="button" class="add" onclick="add_row();" value="Add Row"></td>
                    </tr>

                </table>
            </div>
            </section>

            <!-- Footer bar-->
            <section class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-md-8 col-lg-12">
                            <div class="callout-text font-alt">
                                <p style="margin-bottom: 0px;" class="alignleft">2018 Team Powerpuff</p>
                                <p style="margin-bottom: 0px;" class="alignright">Middle College High School</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>



