@{
	ViewBag.Title = "Student Edit Profile";
}

<section class="module">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2">
				<h4 class="font-alt mb-0" style="color:white">Your Profile</h4>
				<hr class="divider-w mt-10 mb-20">
				<div class="row">
					<div class="col-sm-4">
						<form class="form">
							<div class="form-group">
								<input class="form-control" id="username" type="text" name="username" placeholder="Username" />
							</div>
							<div class="form-group">
								<label for="avatar" class="font-alt">Avatar choice:</label>
								<select class="form-control" id="avatar">
									<option>Cat</option>
									<option>Dog</option>
									<option>Elephant</option>
									<option>Fox</option>
									<option>Frog</option>
									<option>Rabbit</option>
									<option>Squirrel</option>
									<option>Swan</option>
								</select>
							</div>
							<div class="form-group">
								<a class="btn btn-block btn-round btn-b" href="@Url.Action("Index", "Student")" style="text-align:center">Update</a>
								<a class="btn btn-block btn-round btn-b" href="@Url.Action("Index", "Student")" style="text-align:center">Cancel</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>